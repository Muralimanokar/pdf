      td
        | 6187D8C-0002
    tr
      th Billed on
      td
        | August 25th, 2018
    tr
      th Due on
      td
        | August 25th, 2018
  .payment-details
  table.full-width.invoice
    thead
      tr
        th Date
        th Description
        th Quantity
        th Price
    tbody
      tr
        td
          | August 25th, 2018 &mdash; September 25th, 2018
        td
          | 1 &times; Subscription (at $50.00 / month)
        td
          | 1
        td
          | $50.00
      tr.total
        th(colspan='3') Total
        td
          | $50.00
      tr.total
        th(colspan='3') Paid
        td
